doctype html
html
  head
    title= HugDown
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    // Bootstrap CSS CDN
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css', integrity='sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM', crossorigin='anonymous')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/geral.css')
    block styles
  body
    // Navbar Bootstrap
    nav.navbar.navbar-expand-lg.navbar-light.bg-light.shadow-sm.py-0
      .container-fluid
        a.navbar-brand.d-flex.align-items-center.gap-2(href='/')
          img#logo-hugdown(src='/images/logo.jpg', alt='HugDown Logo', height='40')
          span.logo-text HugDown
        button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        .collapse.navbar-collapse#navbarNav
          ul.navbar-nav.ms-auto.align-items-center.gap-2
            li.nav-item
              a.nav-link.p-2(href='/notifications', title='Notificações')
                img#icon-notificacao(src='/images/notificação.png', alt='Notificações', height='28')
            li.nav-item
              a.nav-link.p-2(href='/search', title='Pesquisar')
                img#icon-lupa(src='/images/lupa.png', alt='Pesquisar', height='28')
            li.nav-item
              a.nav-link.p-2(href='/post/new', title='Nova postagem')
                img#icon-mais(src='/images/mais.png', alt='Nova postagem', height='28')

    // Conteúdo principal
    main.site-main.container.mt-4.mb-5
      block content

    // Rodapé Bootstrap
    footer.site-footer.bg-light.shadow-sm.fixed-bottom
      .container
        .d-flex.justify-content-end.align-items-center.gap-3.py-2
          a(href='/settings', title='Configurações', class='d-flex align-items-center')
            img#icon-engrenagem(src='/images/engrenagem.png', alt='Configurações', height='28')
          a(href='/chat', title='Chat', class='d-flex align-items-center')
            img#icon-chat(src='/images/chat.png', alt='Chat', height='28')

  // Bootstrap JS Bundle
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js', integrity='sha384-ENjdO4Dr2bkBIFxQpeoA6VKHr8BL6l5/2nU5l5Wv4l5F5F5F5F5F5F5F5F5F5F', crossorigin='anonymous')
